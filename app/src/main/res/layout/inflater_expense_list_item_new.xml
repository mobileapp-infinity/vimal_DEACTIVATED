<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llExpandedHeaderExpenseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/expense_list_shape"
            android:orientation="horizontal">

            <com.infinity.kich.CommonCls.CustomTextView
                android:id="@+id/tvExpenseName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="8dp"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <com.infinity.kich.CommonCls.CustomTextView
                android:id="@+id/tvExpenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="8dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViewMoreBtnExpenseHeader"
                app:srcCompat="@drawable/ic_expand_more"
                android:tint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandableLayoutExpenseDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llSpModeOfTransport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_border"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spSelectModeOfTransport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:minHeight="35dp"
                        android:gravity="center"
                        app:hintText="Select mode of transport"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSpFoodExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_border"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spSelectFoodExpense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:minHeight="35dp"
                        android:gravity="center"
                        app:hintText="Select food expense"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/login_border">

                    <com.infinity.kich.CommonCls.CustomEditText
                        android:id="@+id/edtExpenseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Description"
                        android:lines="3"
                        android:maxLines="3"
                        android:minHeight="35dp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:padding="4dp"
                    android:background="@drawable/login_border">

                    <com.infinity.kich.CommonCls.CustomEditText
                        android:id="@+id/edtExpenseAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Amount"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:longClickable="false"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:minHeight="35dp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/login_border">

                    <com.infinity.kich.CommonCls.CustomTextView
                        android:id="@+id/tvAttachmentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_attach_file_red_24dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/colorPrimary"
                        android:editable="false"
                        android:hint="Attachment"
                        android:longClickable="false"
                        android:minHeight="35dp"
                        android:padding="5dp"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>