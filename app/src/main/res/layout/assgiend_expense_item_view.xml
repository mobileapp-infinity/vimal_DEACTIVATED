<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"

        android:id="@+id/lin_header"
        android:layout_height="wrap_content">

        <com.infinity.infoway.vimal.util.common.CustomBoldTextView android:padding="2dp"
            android:layout_width="0dp"
            android:text="Expense Name"

            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <com.infinity.infoway.vimal.util.common.CustomBoldTextView android:padding="2dp"
            android:layout_width="0dp"

            android:text="Description"
            android:textSize="@dimen/text_size"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <com.infinity.infoway.vimal.util.common.CustomBoldTextView android:padding="2dp"
            android:layout_width="0dp"

            android:text="Amount"
            android:textSize="@dimen/text_size"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <com.infinity.infoway.vimal.util.common.CustomBoldTextView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Image"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" /> <com.infinity.infoway.vimal.util.common.CustomBoldTextView android:padding="2dp"
        android:layout_width="0dp"

        android:text="Deadline \nDate"
        android:textSize="@dimen/text_size"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_height="wrap_content"/>


    </LinearLayout>












    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"

        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"

        card_view:contentPadding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="end"
                android:id="@+id/iv_delete"
                android:visibility="gone"
                android:background="@color/red"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_height="20dp"></ImageView>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <com.infinity.infoway.vimal.util.common.CustomTextView android:padding="2dp"
                    android:layout_width="0dp"

                    android:id="@+id/tv0"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <com.infinity.infoway.vimal.util.common.CustomTextView android:padding="2dp"
                    android:layout_width="0dp"
                    android:id="@+id/tv1"

                    android:textSize="@dimen/text_size"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.infinity.infoway.vimal.util.common.CustomTextView android:padding="2dp"
                    android:layout_width="0dp"
                    android:id="@+id/tv2"
                    android:text=""

                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center"

                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.infinity.infoway.vimal.util.common.CustomTextView android:padding="2dp"
                    android:layout_width="0dp"
                    android:id="@+id/tv3"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center"

                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <com.infinity.infoway.vimal.util.common.CustomTextView android:padding="2dp"
                    android:layout_width="0dp"
                    android:id="@+id/tv4"
                    android:text=""

                    android:textSize="@dimen/text_size"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>   <com.infinity.infoway.vimal.util.common.CustomTextView android:padding="2dp"
                android:layout_width="0dp"
                android:id="@+id/tv5"
                android:text=""

                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.infinity.infoway.vimal.util.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_approve"
                    android:text="Approve"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/text_size"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible"

                    android:drawablePadding="5dp"
                    android:background="@drawable/border_choose_file"
                    android:layout_height="wrap_content"/>
                <com.infinity.infoway.vimal.util.common.CustomTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_reject"
                    android:text="Reject"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible"

                    android:drawablePadding="5dp"
                    android:background="@drawable/border_choose_file"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
