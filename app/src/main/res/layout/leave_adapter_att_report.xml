<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/ll_main"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_miss_punch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/miss_punch_bg"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        android:weightSum="3">


        <com.infinity.infoway.vimal.util.common.CustomBoldTextView
            android:id="@+id/txt_enroll_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="Miss Punch Approve"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_main_heder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">



            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/black"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>

            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>

            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:id="@+id/ll_pending"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.infinity.infoway.vimal.util.common.CustomTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text"
               ></com.infinity.infoway.vimal.util.common.CustomTextView>

            <com.infinity.infoway.vimal.util.common.CustomTextView
                android:id="@+id/tv_staus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".7"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text"
               ></com.infinity.infoway.vimal.util.common.CustomTextView>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:padding="15dp"
            android:background="@color/grey" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/ll_approved"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">



            <com.infinity.infoway.vimal.util.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Approved"
                android:textColor="@color/text"></com.infinity.infoway.vimal.util.common.CustomTextView>

            <com.infinity.infoway.vimal.util.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="01/08/2018"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomTextView>

            <com.infinity.infoway.vimal.util.common.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="09:00 AM"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomTextView>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
    </LinearLayout>

</LinearLayout>