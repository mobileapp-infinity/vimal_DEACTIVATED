<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_update_delete_card"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">


            <androidx.cardview.widget.CardView
                android:id="@+id/cad_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@color/red"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:elevation="36dp">

                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                    android:id="@+id/tv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Approve"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="8dp"

                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:elevation="36dp">

                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                    android:id="@+id/tv_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Reject"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="3dp"
                card_view:elevation="36dp">

                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fillViewport="true"
                    android:windowSoftInputMode="adjustPan">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_emp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_border"

                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Status"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/edt_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_leave_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/edt_leave_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"

                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:orientation="vertical">

                                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="Date"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size" />

                                <com.infinity.infoway.vimal.util.common.CustomTextView
                                    android:id="@+id/edt_from_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"

                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/iv_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight=".9"
                                android:gravity="right|bottom"
                                android:text="  09:00AM  "
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:orientation="vertical">

                                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="In Time"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size" />

                                <com.infinity.infoway.vimal.util.common.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:id="@+id/tv_in_time"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight=".9"
                                android:gravity="right|bottom"
                                android:text="  09:00AM  "
                                android:visibility="gone" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Out Time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/edt_day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"

                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Reason"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:id="@+id/tv_reason"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:visibility="gone">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Approved By"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:text="director.sop@rku.ac.in"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Working Hours"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:id="@+id/tv_working_hours"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            android:background="@drawable/login_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Approved By"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:text="Admin"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

   <!-- <include
        android:id="@+id/tool_main"
        layout="@layout/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />-->

    <include
        android:id="@+id/tool_main"
        layout="@layout/toolbar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


</RelativeLayout>