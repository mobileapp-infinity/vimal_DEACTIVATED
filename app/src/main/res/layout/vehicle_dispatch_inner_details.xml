<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/vehicle_dispatch_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
      <LinearLayout
          android:padding="@dimen/_5sdp"
          android:orientation="horizontal"
          android:layout_width="match_parent"

          android:layout_height="wrap_content">

          <TextView
              android:layout_weight="1"
              android:layout_width="match_parent"

              android:layout_gravity="center"
              android:text="Invoice No :-"
              android:layout_height="wrap_content"/>

          <TextView
              android:id="@+id/tv_invoice_name"
              android:layout_weight="0.4"
              android:layout_width="match_parent"

              android:layout_gravity="center"
              android:layout_height="wrap_content"/>



      </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Invoice Date :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_invoice_date"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Driver Name :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_driver_name"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Driver No :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_driver_no"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Vehicle No :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_vehicle_no"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Customer City :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_customer_city"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Delivery City :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_delivery_city"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:text="Delivery Area :-"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_delivery_area"
                android:layout_weight="0.4"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                android:layout_height="wrap_content"/>



        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>