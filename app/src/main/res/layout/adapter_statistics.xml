<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView  xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/header_leave_balance"
                android:visibility="gone"
                android:background="@drawable/miss_punch_bg"
               >

                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="Statistics"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">



                    <com.infinity.infoway.vimal.util.common.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center|left"
                        android:padding="15dp"
                        android:text=""
                        android:id="@+id/tv_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomTextView>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:background="@color/levave_balance" />
                    <com.infinity.infoway.vimal.util.common.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".8"
                        android:gravity="center"
                        android:text=""
                        android:id="@+id/tv_count"
                        android:padding="15dp"
                        android:paddingLeft="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"></com.infinity.infoway.vimal.util.common.CustomTextView>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="15dp"
                android:background="@color/levave_balance" />
        </LinearLayout>
    </androidx.cardview.widget.CardView >
</LinearLayout>