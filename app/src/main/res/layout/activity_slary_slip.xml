<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:id="@+id/ll_main_"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView  xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="6dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            card_view:elevation="36dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/miss_punch_bg"
                    android:id="@+id/ll_main_heder"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                        android:layout_width="0dp"
                        android:text="Month"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:background="@color/grey" />
                    <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size"
                        android:text="Amount"
                        android:padding="5dp"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:background="@color/grey" />
                    <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size"
                        android:text="Download"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"></com.infinity.infoway.vimal.util.common.CustomBoldTextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_salary_slip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:divider="@null"></ListView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView >
    </LinearLayout>

    <include
        android:id="@+id/tool_main"
        layout="@layout/toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/tool_main"
        layout="@layout/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true" />
</RelativeLayout>
