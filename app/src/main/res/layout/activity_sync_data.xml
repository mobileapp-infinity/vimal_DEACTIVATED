<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_sync_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Activity_Sync_Data">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_call_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_retailer_visit_call_sync_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/switch_retailer_visit_call_sync"
                    android:textColor="@color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_retailer_visit_call_sync_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_retailer_visit_call_sync_count"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/switch_retailer_visit_call_sync"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_retailer_visit_call_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view_retailer_visit_call"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_home"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_retailer_new_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_retailer_new_call_sync_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/switch_retailer_new_call_sync"
                    android:textColor="@color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_retailer_new_call_sync_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_retailer_new_call_sync_count"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/switch_retailer_new_call_sync"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_retailer_new_call_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view_retailer_new_call"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_home"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_retailer_regular_call_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_retailer_regular_call_sync_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/switch_retailer_regular_call_sync"
                    android:textColor="@color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_retailer_regular_call_sync_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_retailer_regular_call_sync_count"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/switch_retailer_regular_call_sync"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_retailer_regular_call_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view_retailer_regular_call"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_home"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_distributor_visit_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txt_distributor_visit_call_sync_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/switch_distributor_visit_call_sync"
                    android:textColor="@color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_distributor_visit_call_sync_count"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/switch_distributor_visit_call_sync"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_distributor_visit_call_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view_distributor_visit_call"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_home"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_distributor_regular_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txt_distributor_regular_call_sync_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_toLeftOf="@+id/switch_distributor_regular_call_sync"
                    android:textColor="@color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_distributor_regular_call_sync_count"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/switch_distributor_regular_call_sync"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_distributor_regular_call_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view_distributor_regular_call"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_home"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_myschedule_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_myschedule_sync_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_myschedule_sync_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_myschedule_sync_count"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_toLeftOf="@+id/switch_myscheduler_sync"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_myscheduler_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_home"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>