<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HiBondListingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <com.infinity.infoway.vimal.util.common.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="All"
            android:background="@color/font_color_hibond"
            android:layout_weight="1"></com.infinity.infoway.vimal.util.common.CustomTextView>
        <com.infinity.infoway.vimal.util.common.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="AutoMobile"
            android:background="@color/font_color_hibond"
            android:layout_weight="1"></com.infinity.infoway.vimal.util.common.CustomTextView>
        <com.infinity.infoway.vimal.util.common.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Accessories"
            android:background="@color/font_color_hibond"
            android:layout_weight="1"></com.infinity.infoway.vimal.util.common.CustomTextView>
        <com.infinity.infoway.vimal.util.common.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Electrics"
            android:background="@color/font_color_hibond"
            android:layout_weight="1"></com.infinity.infoway.vimal.util.common.CustomTextView>
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"

        android:dividerHeight="0dp"></ListView>
</LinearLayout>