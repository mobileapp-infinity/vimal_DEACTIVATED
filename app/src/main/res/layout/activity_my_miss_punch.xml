<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView  xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="6dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            card_view:elevation="36dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_miss_punch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/miss_punch_bg"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:weightSum="3">


                    <com.infinity.kich.CommonCls.CustomBoldTextView
                        android:id="@+id/txt_enroll_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Miss Punch View"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/ll_main_heder"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <com.infinity.kich.CommonCls.CustomBoldTextView
                        android:layout_width="0dp"
                        android:text="Status"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></com.infinity.kich.CommonCls.CustomBoldTextView>
                    <com.infinity.kich.CommonCls.CustomBoldTextView
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size"
                        android:text="In Time"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></com.infinity.kich.CommonCls.CustomBoldTextView>
                    <com.infinity.kich.CommonCls.CustomBoldTextView
                        android:layout_width="0dp"
                        android:textSize="@dimen/text_size"
                        android:text="Out Time"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></com.infinity.kich.CommonCls.CustomBoldTextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_miss_punch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:divider="@null"></ListView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView >
    </LinearLayout>

    <include
        android:id="@+id/tool_main"
        layout="@layout/toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/tool_main"
        layout="@layout/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true" />
</RelativeLayout>
