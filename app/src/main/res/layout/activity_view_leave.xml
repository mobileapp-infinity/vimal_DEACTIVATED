<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                android:id="@+id/tv_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/border_fill_border_pink"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Update"
                android:textColor="@color/white" />

            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/border_signup"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:text="Delete"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView  xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="3dp"
                card_view:elevation="36dp">

                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_margin="10dp"
                    android:windowSoftInputMode="adjustPan">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                       >

                        <LinearLayout
                            android:id="@+id/ll_emp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/add_leave_border"

                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Leave Status"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/edt_emp_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Pending"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_leave_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Leave Balance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/edt_leave_balance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:text="5"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:orientation="vertical">

                                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="From Date"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size" />

                                <com.infinity.infoway.vimal.util.common.CustomTextView
                                    android:id="@+id/edt_from_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="19/8/2019"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/iv_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight=".9"

                                android:gravity="right|bottom"
                                android:text="  09:00AM  " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:orientation="vertical">

                                <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="To Date"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size" />

                                <com.infinity.infoway.vimal.util.common.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="19/8/2019"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight=".9"

                                android:gravity="right|bottom"
                                android:text="  09:00AM  " />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Days"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:id="@+id/edt_day"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="1 Day"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Reason"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Personal Reason"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Approved By"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:text="director.sop@rku.ac.in"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/add_leave_border"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.infinity.infoway.vimal.util.common.CustomBoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Leave Type"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />

                            <com.infinity.infoway.vimal.util.common.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:text="Casual Leave"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView >
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/tool_main"
        layout="@layout/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <include
        android:id="@+id/tool_main"
        layout="@layout/toolbar_activity"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


</RelativeLayout>